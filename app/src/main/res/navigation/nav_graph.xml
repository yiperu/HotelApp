<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home_fragment">
    <activity
        android:id="@+id/nav_main_activity"
        android:name="com.arqoders.hotelapp.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/nav_home_fragment"
        android:name="com.arqoders.hotelapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_details_fragment"
        android:name="com.arqoders.hotelapp.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/nav_cache_fragment"
        android:name="com.arqoders.hotelapp.ui.cache.CacheFragment"
        android:label="fragment_cache"
        tools:layout="@layout/fragment_cache" />
    <fragment
        android:id="@+id/nav_preference_fragment"
        android:name="com.arqoders.hotelapp.ui.preference.PreferenceFragment"
        android:label="fragment_preference"
        tools:layout="@layout/fragment_preference" />
    <activity
        android:id="@+id/nav_splash_screen_activity"
        android:name="com.arqoders.hotelapp.ui.splash.SplashScreenActivity"
        android:label="splash_activity"
        tools:layout="@layout/splash_activity" >
        <action
            android:id="@+id/action_nav_splash_screen_activity_to_nav_main_activity"
            app:destination="@id/nav_main_activity" />
    </activity>
</navigation>